{
  "info": {
    "name": "Subscription API",
    "description": "Complete API collection for testing the Subscription Module with Paystack integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.accessToken) {",
                  "        pm.environment.set('jwt_token', response.data.accessToken);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Payment Plans",
      "item": [
        {
          "name": "Get All Plans",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/subscriptions/plans",
              "host": ["{{base_url}}"],
              "path": ["subscriptions", "plans"]
            }
          }
        },
        {
          "name": "Get Early Bird Plan",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/subscriptions/plans/early_bird",
              "host": ["{{base_url}}"],
              "path": ["subscriptions", "plans", "early_bird"]
            }
          }
        },
        {
          "name": "Get Mid Plan",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/subscriptions/plans/mid",
              "host": ["{{base_url}}"],
              "path": ["subscriptions", "plans", "mid"]
            }
          }
        },
        {
          "name": "Get Normal Plan",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/subscriptions/plans/normal",
              "host": ["{{base_url}}"],
              "path": ["subscriptions", "plans", "normal"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Create Subscription",
      "item": [
        {
          "name": "Create Early Bird Subscription",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.data) {",
                  "        pm.environment.set('subscription_id', response.data.subscription._id);",
                  "        pm.environment.set('payment_url', response.data.paymentUrl);",
                  "        pm.environment.set('transaction_reference', response.data.transaction.paystackReference);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"planType\": \"early_bird\",\n  \"metadata\": {\n    \"source\": \"postman_test\"\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/subscriptions",
              "host": ["{{base_url}}"],
              "path": ["subscriptions"]
            }
          }
        },
        {
          "name": "Create Mid Subscription",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"planType\": \"mid\",\n  \"metadata\": {\n    \"source\": \"postman_test\"\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/subscriptions",
              "host": ["{{base_url}}"],
              "path": ["subscriptions"]
            }
          }
        },
        {
          "name": "Create Normal Subscription",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"planType\": \"normal\",\n  \"metadata\": {\n    \"source\": \"postman_test\"\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/subscriptions",
              "host": ["{{base_url}}"],
              "path": ["subscriptions"]
            }
          }
        }
      ]
    },
    {
      "name": "4. View Subscriptions",
      "item": [
        {
          "name": "My Subscriptions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/subscriptions/my-subscriptions",
              "host": ["{{base_url}}"],
              "path": ["subscriptions", "my-subscriptions"]
            }
          }
        },
        {
          "name": "Active Subscription",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/subscriptions/active",
              "host": ["{{base_url}}"],
              "path": ["subscriptions", "active"]
            }
          }
        },
        {
          "name": "Subscription by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/subscriptions/{{subscription_id}}",
              "host": ["{{base_url}}"],
              "path": ["subscriptions", "{{subscription_id}}"]
            }
          }
        },
        {
          "name": "Check Access",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/subscriptions/check-access",
              "host": ["{{base_url}}"],
              "path": ["subscriptions", "check-access"]
            }
          }
        }
      ]
    },
    {
      "name": "5. Payments",
      "item": [
        {
          "name": "Verify Payment",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/subscriptions/verify?reference={{transaction_reference}}",
              "host": ["{{base_url}}"],
              "path": ["subscriptions", "verify"],
              "query": [
                {
                  "key": "reference",
                  "value": "{{transaction_reference}}"
                }
              ]
            }
          }
        },
        {
          "name": "Make Next Payment",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"metadata\": {\n    \"installment\": 2\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/subscriptions/{{subscription_id}}/pay",
              "host": ["{{base_url}}"],
              "path": ["subscriptions", "{{subscription_id}}", "pay"]
            }
          }
        }
      ]
    },
    {
      "name": "6. Transactions",
      "item": [
        {
          "name": "My Transactions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/subscriptions/transactions/my-transactions",
              "host": ["{{base_url}}"],
              "path": ["subscriptions", "transactions", "my-transactions"]
            }
          }
        },
        {
          "name": "Subscription Transactions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/subscriptions/{{subscription_id}}/transactions",
              "host": ["{{base_url}}"],
              "path": ["subscriptions", "{{subscription_id}}", "transactions"]
            }
          }
        }
      ]
    },
    {
      "name": "7. Management",
      "item": [
        {
          "name": "Cancel Subscription",
          "request": {
            "method": "PATCH",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Testing cancellation functionality\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/subscriptions/{{subscription_id}}/cancel",
              "host": ["{{base_url}}"],
              "path": ["subscriptions", "{{subscription_id}}", "cancel"]
            }
          }
        }
      ]
    },
    {
      "name": "8. Admin",
      "item": [
        {
          "name": "Payment Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/subscriptions/stats/payments",
              "host": ["{{base_url}}"],
              "path": ["subscriptions", "stats", "payments"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "subscription_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "transaction_reference",
      "value": "",
      "type": "string"
    },
    {
      "key": "payment_url",
      "value": "",
      "type": "string"
    }
  ]
}

